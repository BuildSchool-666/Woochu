@using Front.Models.ViewModels.Comment
@model CommentlistVM
@{
ViewData["Title"] = "Comment";
}

<div class="body" style="margin-top: 150px;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">HostName</th>
                    <th scope="col">RoomTitle</th>
                    <th scope="col">OrderDate</th>
                    <th scope="col">CheckInDate</th>
                    <th scope="col">CheckOutDate</th>
                    <th scope="col">TotalPrice</th>
                    <th scope="col">Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Comment)
               {
                    <tr>
                        <td>@item.HostName</td>
                        <td>@item.RoomTitle</td>
                        <td>@item.OrderDate</td>
                        <td>@item.CheckInDate</td>
                        <td>@item.CheckOutDate</td>
                        <td>@item.TotalPrice</td>
                        <td>
                            <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal"
                                style="background-color: #ff5361; color: white;">
                                Comment
                            </button>
                        </td>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content" style="height: 500px; ">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">comment</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group row">
                                            <label for="staticEmail" class="col-sm-2 col-form-label">UserEmail</label>
                                            <div class="col-sm-10">
                                                <input type="text" disabled="disabled" readonly
                                                    class="form-control-plaintext" id="staticEmail"
                                                    value="cloudyang3759@gmail.com">
                                            </div>
                                        </div>

                                        <div class="checkboxGroup">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="1">
                                                <label class="form-check-label" for="inlineRadio1">1&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="2">
                                                <label class="form-check-label" for="inlineRadio1">2&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="3">
                                                <label class="form-check-label" for="inlineRadio1">3&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="4">
                                                <label class="form-check-label" for="inlineRadio1">4&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="5">
                                                <label class="form-check-label" for="inlineRadio1">5&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>

                                        </div>

                                        <div class="commentRequest">
                                            <label for="validationServer01" class="validationServer01">請輸入評論 : </label>
                                            <textarea placeholder="請輸入100字以內的評論" name="mytext" rows="3" cols="50"
                                                id="validationServer01" maxlength="100" required
                                                style="font-size:16px;"></textarea>

                                            <small id="emailHelp" class="form-text text-muted">請輸入100字以內的評論</small>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="submit" onclick="InsertComment(@item.RoomId)" class="btn"
                                                style="background-color: #ff5361; color: white;">Save changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    </tr>
                   

               }
            
            </tbody>
        </table>
    </div>



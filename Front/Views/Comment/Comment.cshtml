@using Front.Models.ViewModels.Comment
@model CommentlistVM

@{
ViewData["Title"] = "Comment";
}

@functions
{
    public void InComment(int? commentId)
    {

        if(commentId == null)
        {
            <button id="comment" type="button" class="btn comment" data-toggle="modal" data-target="#exampleModal"
                                style="background-color: #ff5361; color: white; display:block;" >
                                Comment
            </button>

            <button id="delete" type="button" class="delete btn" data-toggle="modal" data-target="#exampleModal2"
                                style="background-color: #ff5361; color: white; display:none;">
                                Delete
            </button>
        }
        else
        {
            <button id="comment" type="button" class="btn comment" data-toggle="modal" data-target="#exampleModal"
                    style="background-color: #ff5361; color: white; display:none;" >
                    Comment
            </button>
            <button id="delete" type="button" class="delete btn" data-toggle="modal" data-target="#exampleModal2"
                                style="background-color: #ff5361; color: white; display:block;">
                                Delete
            </button>
        }
    }
} 


<div class="body" style="margin-top: 150px;">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">HostName</th>
                    <th scope="col">RoomTitle</th>
                    <th scope="col">OrderDate</th>
                    <th scope="col">CheckInDate</th>
                    <th scope="col">CheckOutDate</th>
                    <th scope="col">TotalPrice</th>
                    <th scope="col">Comment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Comment)
               {
                    <tr>
                        <td>@item.HostName</td>
                        <td>@item.RoomTitle</td>
                        <td>@item.OrderDate</td>
                        <td>@item.CheckInDate</td>
                        <td>@item.CheckOutDate</td>
                        <td>@item.TotalPrice</td>
                        <td>@{InComment(item.commentId);}</td>

                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content" style="height: 500px; ">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">comment</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group row">
                                            <label for="staticEmail" class="col-sm-2 col-form-label">UserEmail</label>
                                            <div class="col-sm-10">
                                                <input type="text" disabled="disabled" readonly
                                                    class="form-control-plaintext" id="staticEmail"
                                                    value="cloudyang3759@gmail.com">
                                            </div>
                                        </div>

                                        <div class="checkboxGroup">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="1">
                                                <label class="form-check-label" for="inlineRadio1">1&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="2">
                                                <label class="form-check-label" for="inlineRadio1">2&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="3">
                                                <label class="form-check-label" for="inlineRadio1">3&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="4">
                                                <label class="form-check-label" for="inlineRadio1">4&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions"
                                                    id="inlineRadio1" value="5">
                                                <label class="form-check-label" for="inlineRadio1">5&nbsp<i
                                                        class="fas fa-star"></i></label>
                                            </div>

                                        </div>

                                        <div class="commentRequest">
                                            <label for="validationServer01" class="validationServer01">請輸入評論 : </label>
                                            <textarea placeholder="請輸入100字以內的評論" name="mytext" rows="3" cols="50"
                                                id="validationServer01" maxlength="100" required
                                                style="font-size:16px;"></textarea>

                                            <small id="emailHelp" class="form-text text-muted">請輸入100字以內的評論</small>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="submit" onclick="InsertComment(@item.RoomId)" data-dismiss="modal" class="btn Save"
                                                style="background-color: #ff5361; color: white;">Save changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Delete The Comment</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group row">
                                        <label for="staticEmail" class="col-sm-2 col-form-label">UserEmail</label>
                                        <div class="col-sm-10">
                                            <input type="text" disabled="disabled" readonly
                                                class="form-control-plaintext" id="staticEmail"
                                                value="cloudyang3759@gmail.com">
                                        </div>
                                    </div>
                                    <div class="content">
                                        <p> @item.content
                                        </p>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button class="btn Delete" onclick="DeleteComment(@item.RoomId)" data-dismiss="modal"
                                            style="background-color: #ff5361; color: white;">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    </tr>
                   

               }
            
            </tbody>
        </table>
    </div>



@using Front.Models.ViewModels


    <div class="title ms-3 mb-5">
        <h1>帳號</h1>
        <div class="info d-flex">
            <p>@Model.FirstName @Model.LastName</p>
            <p> ,</p>
            <span>@Model.Email</span>
            <a href="#" class="link">前往個人資料</a>
        </div>
    </div>
    <div class="row m-auto">
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/PersonalInformation" class="card-link">
                <div class="card mb-4  shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-id-card fw-light"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">個人資料</h5>
                        <h6 class="card-subtitle mb-2 text-muted">提供個人資料和聯絡方式</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="#" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between ">
                        <div class="logo w-100">
                            <i class="fa-solid fa-shield-halved"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">登入與安全</h5>
                        <h6 class="card-subtitle mb-2 text-muted">更新密碼以確保帳號安全</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="#" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-money-bills"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">付款與收款</h5>
                        <h6 class="card-subtitle mb-2 text-muted">查看付款、收款、優惠券、禮物卡和稅費</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/Notification" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-bullhorn"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">通知</h5>
                        <h6 class="card-subtitle mb-2 text-muted">選擇通知設定和你偏好的聯絡方式</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/Privacy" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-eye"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">隱私與分享</h5>
                        <h6 class="card-subtitle mb-2 text-muted">管理已連結的應用程式、你分享的內容以及其他人的訪問權限</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/GlobalPreference" class="card-link">
                <div class="card mb-4 shadow bg-white rounded"  style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-bars-progress"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">全域偏好設定</h5>
                        <h6 class="card-subtitle mb-2 text-muted">設定預設的語言、幣別和時區</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/TravelForWork" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-briefcase"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">差旅</h5>
                        <h6 class="card-subtitle mb-2 text-muted">新增工作電子郵件，即可享受商務差旅福利</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/ProfessionalHostTools" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-chart-simple"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">專業出租工具</h5>
                        <h6 class="card-subtitle mb-2 text-muted">如果你在 Airbnb 上管理多間房源，可以使用專業工具</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-6 col-lg-4">
            <a href="~/Account_settings/GuestReferrals" class="card-link">
                <div class="card mb-4 shadow bg-white rounded" style="height: 10em;">
                    <div class="card-body d-flex flex-wrap align-content-between">
                        <div class="logo w-100">
                            <i class="fa-solid fa-gift"></i>
                        </div>
                        <div class="details w-100">
                            <h5 class="card-title fw-bold">邀請好友旅行基金和優惠券</h5>
                        <h6 class="card-subtitle mb-2 text-muted">你有 $0 TWD 的邀請好友旅行基金和優惠券可供使用。了解詳情。</h6>
                        </div>
                            
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="delete-account d-flex justify-content-center align-content-center m-5 flex-wrap">
        <div class="text-center">想要想要停用你的帳號嗎？</div>
        <a href="#" class="text-dark fw-bold">立即處理</a>
    </div>


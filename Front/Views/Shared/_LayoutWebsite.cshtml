@using MVCModels.MyEnum
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Front</title>
    <link rel="stylesheet" href="~/css/Reset1.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("topCSS", required: false)
    @await RenderSectionAsync("topJS", required: false)
</head>
<body>
    <div class="header">
        <nav id="navBar">
            <a href="~/"><img src="~/images/Whoochu.png" class="logo" alt=""></a>
            <ul class="nav-links">
                <li><a id='homePage' class="active" href="~/">首頁</a></li>
                <li><a id='roomList' href="~/Rooms/roomlist">房屋清單</a></li>
                <li><a id='roomType' href="/RoomDetail/roomDetail">熱門房型</a></li>
            </ul>
            <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn register-btn">
                    <i class="fas fa-bars" style="font-size: 20px;"></i>
                    <i class="fas fa-user-circle" style="font-size: 30px;"></i>
                </button>
                <div id="myDropdown" class="dropdown-content">
                    <a href="#home">登入</a>
                    <a href="#home">註冊</a>
                    <a href="#home">出租房源</a>
                </div>
            </div>


            <i class="fas fa-bars hidden-btn" onclick="togglebtn()"></i>
        </nav>
        <div class="container">
            <h1>Find Your Next Stay</h1>
            <div class="search-bar">
                <form>
                    <div class="Location-input">
                        <label>地點</label>
                        <select>
                            <option value="1" selected>選擇前往地點 ?</option>
                            <option value="2">台北</option>
                            <option value="3">桃園</option>
                            <option value="4">新竹</option>
                            <option value="5">苗栗</option>
                        </select>

                    </div>
                    <div>
                        <label>入住時間 :</label>
                        <input type="datetime-local" id="checkin-time" name="checkin-time" value="">
                    </div>
                    <div class="checkout">
                        <label>退房時間 :</label>
                        <input type="datetime-local" id="checkout-time" name="checkout-time" value="">
                    </div>
                    
                    <button type="submit"><img src="~/images/search.png" alt=""></button>
                </form>
            </div>
        </div>
    </div>

    @RenderBody()
    <div class="container">
        <hr>
        <footer class="all">
            <span class="menu">
                <h3>用戶支援</h3>
                <ul>
                    <li><a href="#">說明中心</a></li>
                    <li><a href="#">AirCover</a></li>
                    <li><a href="#">安全資訊</a></li>
                    <li><a href="#">支援身心障礙人士</a></li>
                    <li><a href="#">退訂選項</a></li>
                    <li><a href="#">我們的新冠肺炎因應措施</a></li>
                    <li><a href="#">回報社區問題</a></li>
                </ul>
            </span>
            <span class="menu">
                <h3>社區</h3>
                <ul>
                    <li><a href="#">Airbnb.org:救災住宿</a></li>
                    <li><a href="#">支援阿富汗難民</a></li>
                    <li><a href="#">消弭歧視</a></li>
                </ul>
            </span>
            <span class="menu">
                <h3>出租房源和舉辦體驗</h3>
                <ul>
                    <li><a href="#">開始出租／舉辦體驗</a></li>
                    <li><a href="#">專為房東提供的 AirCover</a></li>
                    <li><a href="#">瀏覽待客資源</a></li>
                    <li><a href="#">前往我們的社區論壇</a></li>
                    <li><a href="#">落實負責任出租和舉辦體驗的方法</a></li>
                </ul>
            </span>
            <span class="menu">
                <h3>關於</h3>
                <ul>
                    <li><a href="#">Airbnb 新聞中心</a></li>
                    <li><a href="#">了解新功能</a></li>
                    <li><a href="#">來自 Airbnb 創辦人的信</a></li>
                    <li><a href="#">工作機會</a></li>
                    <li><a href="#">投資人</a></li>
                </ul>
            </span>
        </footer>
        <div class="footer">
            <a href="http://facebook.com"><i class="fab fa-facebook-f"></i></a>
            <a href="http://youtube.com"><i class="fab fa-youtube"></i></a>
            <a href="http://twitter.com"><i class="fab fa-twitter"></i></a>
            <a href="http://linkedin.com"><i class="fab fa-linkedin-in"></i></a>
            <a href="http://instagram.com"><i class="fab fa-instagram"></i></a>
            <hr>
            <p>Copyright © 2022, Easy Tutorials</p>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/Layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("endJS", required: false)
    @await RenderSectionAsync("endCSS", required: false)
</body>
</html>

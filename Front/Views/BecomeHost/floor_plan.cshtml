    <script>
        let app = new Vue({
            el:"#app",
            data:{
                Bed: 1,
                GuestCount: 1,
                BedRoom: 1,
                Bath: 1,
                max:50,
                min:1,

            },
            methods:{
                addGuestCount() {
                      if (this.GuestCount < this.max) this.GuestCount++;
                },
                subGuestCount() {
                      if (this.GuestCount > this.min) this.GuestCount--;
                },
                addBed() {
                      if (this.Bed < this.max) this.Bed++;
                },
                subBed() {
                      if (this.Bed > this.min) this.Bed--;
                },
                addBedRoom() {
                      if (this.BedRoom < this.max) this.BedRoom++;
                },
                subBedRoom() {
                      if (this.BedRoom > this.min) this.BedRoom--;
                },
                 addBath() {
                      if (this.Bath < this.max) this.Bath++;
                },
                subBath() {
                      if (this.Bath > this.min) this.Bath--;
                },

                Next(){
                    const Bed = this.Bed
                    const GuestCount = this.GuestCount
                    const BedRoom = this.BedRoom
                    const Bath = this.Bath

                    var obj = JSON.parse(sessionStorage['currentRoom'])
                    Object.assign(obj,{'GuestCount':GuestCount,'Bed':Bed,'BedRoom':BedRoom,'Bath':Bath})
                    sessionStorage.removeItem('currentRoom');
                    sessionStorage.setItem('currentRoom',JSON.stringify(obj))

                    window.location ='amenities';
                }
            }
        }) 
    </script>

                    <input v-model="Bed" type="number" :min="min" :max="max" class="num">
                    <button v-on:click="addBed()" class="operationadd">+</button>
                </div>
            </div>
            <div class="bedroomnum">
                <h1 style="font-size: 20px;margin-top: 10px;"><strong>臥室</strong></h1>
                <div class="number">
                    <button  v-on:click="subBedRoom()" class="operationreduce">-</button>
                    <input v-model="BedRoom" type="number" :min="min" :max="max" class="num">
                    <button v-on:click="addBedRoom()" class="operationadd">+</button>
                </div>
            </div>
            <div class="bathroomnum">
                <h1 style="font-size: 20px;margin-top: 10px;"><strong>衛浴</strong></h1>
                <div class="number">
                    <button v-on:click="subBath()" class="operationreduce">-</button>
                    <input v-model="Bath" type="number" :min="min" :max="max" class="num">
                    <button v-on:click="addBath()" class="operationadd">+</button>
                </div>
            </div>

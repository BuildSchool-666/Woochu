@section EndJS{
<script>
const nextpageBtn = document.getElementById('next');


let app = new Vue({
    el: '.right',
    data: {
        roomTypeList: [],
        checked: true,
        roomTypeGroupId: 0,
        currentRoom:{}
    },
    mounted() {
        document.addEventListener('DOMContentLoaded', function() {
            axios.get('/api/PublishRoomAPI/GetRoomTypeParent')
                .then((res) => {
                    console.log(res)
                    if (res.data.status === 20000) {
                        app.roomTypeList = res.data.result
                        console.log(app.roomTypeList)
                    }
                })
        });
        if (sessionStorage['roomTypeGroupId']) {
            @*document.getElementById(`${sessionStorage['roomTypeGroupId']}`).focus();*@
            this.Check(sessionStorage['roomTypeGroupId']);
        }
    },
    computed: {
        checkedStyle() {
            return {
                backgroundColor: this.checked ? '#D0D0D0' : 'black',
            }
        }
    },
    methods: {
        Check(roomTypeId) {
            this.checked = false;
            this.roomTypeGroupId = roomTypeId
            console.log(this.roomTypeGroupId)
        },
        GoNextPage() {
            const Id = this.roomTypeGroupId
            var roomTypeGroupId = {'roomTypeGroupId':Id }
            sessionStorage['currentRoom'] = JSON.stringify(roomTypeGroupId)
            window.location = 'property_type';
        }
    }
});

    </script>
}

    <script>
        let app = new Vue({
            el:"#app",
            data:{
                description:'',
                addVerify: true,
                descriptionInput:false
            },
            watch:{
                description:{
                    immediate: true,
                    handler: function(){
                        if(this.description == '')
                        {
                            this.descriptionInput = true
                        }
                        else
                        {
                            this.descriptionInput = false 
                        }
                        this.checkAddVerify()
                    }
                }
            },
            computed: {
                checkedStyle() {
                    return {
                        backgroundColor: this.addVerify ? '#D0D0D0' : 'black',
                    }
                }
            },
            methods:{
                checkAddVerify(){
                    if(this.descriptionInput == true)
                    {
                        this.addVerify = true
                        return
                    }
                    this.addVerify = false;
                },
                Next(){
                    const description = this.description
                    var obj = JSON.parse(sessionStorage['currentRoom'])
                    Object.assign(obj,{'Description': description})
                    sessionStorage.removeItem('currentRoom');
                    sessionStorage.setItem('currentRoom',JSON.stringify(obj))
                    window.location = 'price';
                }
            }
        })
    </script>
    

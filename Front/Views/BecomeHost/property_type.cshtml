@section EndJS{

<script>
let app = new Vue({
    el:'#app',
    data:{
        value: {
            RoomTypeId: 0,
        },
        addVerify:true,
        roomTypeList: [],
    },
    mounted() {
        document.addEventListener('DOMContentLoaded', function() {
            axios.get('/api/PublishRoomAPI/GetRoomType/' + sessionStorage.getItem("roomTypeGroupId"))
                .then((res) => {
                    console.log(res)
                    if (res.data.status === 20000) {
                        app.roomTypeList = res.data.result
                        console.log(app.roomTypeList)
                    }
                })
        });
    },
    methods:{
        SendValue(value){
            console.log(value),
            this.addVerify = false
            this.value.RoomTypeId = value
        },
        CreateRoom(){
            axios.post('/api/PublishRoomAPI/Create', this.value)
            .then((res) =>
				{
					console.log(res)
					if(res.data.status === 20000)
					{
						toastr.success('新增成功')
                        window.location.href="privacy_type"
					}
					else
                    {
						toastr.error('新增失敗')
					}
				})
            }
                
    }  
})

